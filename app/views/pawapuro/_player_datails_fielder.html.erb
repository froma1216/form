<%# 野手能力 %>
<div class="row p-2">
  <%# 基礎能力部 %>
  <%# FIXME: 部分テンプレートに切り出し %>
  <div class="col-3 pe-4 pawa-text-main">
    <div class="d-flex justify-content-start row border border-3 border-white rounded p-1 mb-1 pawa-bg-main">
      <div class="col-5 p-0">
        <div class="pawa-ability-label">弾道</div>
      </div>
      <div class="col-7 ps-3 py-2">
        <%# TODO: 値によって角度を変える %>
        <span class="pawa-text-a me-2 h5"><i class="fa fa-solid fa-arrow-right"></i></span>
        <span class="h5"><%= @player.pawapuro_fielder.trajectory %></span>
      </div>
    </div>
    <div class="d-flex justify-content-start row border border-3 border-white rounded p-1 mb-1 pawa-bg-main">
      <div class="col-5 p-0">
        <div class="pawa-ability-label">ミート</div>
      </div>
      <div class="col-7 ps-3 py-2">
        <span class="me-2 h5"><%= display_alphabet(@player.pawapuro_fielder.meat) %></span>
        <span class="h5"><%= @player.pawapuro_fielder.meat %></span>
      </div>
    </div>
    <div class="d-flex justify-content-start row border border-3 border-white rounded p-1 mb-1 pawa-bg-main">
      <div class="col-5 p-0">
        <div class="pawa-ability-label">パワー</div>
      </div>
      <div class="col-7 ps-3 py-2">
        <span class="me-2 h5"><%= display_alphabet(@player.pawapuro_fielder.power) %></span>
        <span class="h5"><%= @player.pawapuro_fielder.power %></span>
      </div>
    </div>
    <div class="d-flex justify-content-start row border border-3 border-white rounded p-1 mb-1 pawa-bg-main">
      <div class="col-5 p-0">
        <div class="pawa-ability-label">走力</div>
      </div>
      <div class="col-7 ps-3 py-2">
        <span class="me-2 h5"><%= display_alphabet(@player.pawapuro_fielder.running) %></span>
        <span class="h5"><%= @player.pawapuro_fielder.running %></span>
      </div>
    </div>
    <div class="d-flex justify-content-start row border border-3 border-white rounded p-1 mb-1 pawa-bg-main">
      <div class="col-5 p-0">
        <div class="pawa-ability-label">肩力</div>
      </div>
      <div class="col-7 ps-3 py-2">
        <span class="me-2 h5"><%= display_alphabet(@player.pawapuro_fielder.arm_strength) %></span>
        <span class="h5"><%= @player.pawapuro_fielder.arm_strength %></span>
      </div>
    </div>
    <div class="d-flex justify-content-start row border border-3 border-white rounded p-1 mb-1 pawa-bg-main">
      <div class="col-5 p-0">
        <div class="pawa-ability-label">守備力</div>
      </div>
      <div class="col-7 ps-3 py-2">
        <span class="me-2 h5"><%= display_alphabet(@player.pawapuro_fielder.defense) %></span>
        <span class="h5"><%= @player.pawapuro_fielder.defense %></span>
      </div>
    </div>
    <div class="d-flex justify-content-start row border border-3 border-white rounded p-1 pawa-bg-main">
      <div class="col-5 p-0">
        <div class="pawa-ability-label">捕球</div>
      </div>
      <div class="col-7 ps-3 py-2">
        <span class="me-2 h5"><%= display_alphabet(@player.pawapuro_fielder.catching) %></span>
        <span class="h5"><%= @player.pawapuro_fielder.catching %></span>
      </div>
    </div>
  </div>
  <%# 特殊能力部 %>
  <div class="col-9 bg-light border border-3 border-white rounded">
    <%# 値あり %>
    <div class="row">
      <%= render partial: 'special_ability_value_box', locals: { ability_name:"チャンス", ability_value: @player.pawapuro_fielder.chance } %>
      <%= render partial: 'special_ability_value_box', locals: { ability_name:"対左投手", ability_value: @player.pawapuro_fielder.taihidaritousyu } %>
      <%# TODO: テーブルに「キャッチャー」を追加 %>
      <div class="col fs-3 pawa-bg-sa-n1 rounded">
        <div class="row pt-1 pb-1 ps-1 text-center">
          <span class="col-10 pawa-bg-main rounded pawa-text-neutral">&nbsp;</span>
          <span class="col-2 ps-2 text-light"></span>
        </div>
      </div>
      <%= render partial: 'special_ability_value_box', locals: { ability_name:"ケガしにくさ", ability_value: @player.kegasinikusa } %>
    </div>
    <div class="row">
      <%= render partial: 'special_ability_value_box', locals: { ability_name:"盗塁", ability_value: @player.pawapuro_fielder.tourui } %>
      <%= render partial: 'special_ability_value_box', locals: { ability_name:"走塁", ability_value: @player.pawapuro_fielder.sourui } %>
      <%= render partial: 'special_ability_value_box', locals: { ability_name:"送球", ability_value: @player.pawapuro_fielder.soukyuu } %>
      <%= render partial: 'special_ability_value_box', locals: { ability_name:"回復", ability_value: @player.kaifuku } %>
    </div>
    <%# 値なし %>
    <%# FIXME: 部分テンプレートに切り出し %>
    <% abilities_array = @player.pawapuro_fielder.other_special_abilities.split(',') %>
    <% 6.times do |row| %>
      <div class="row">
        <% (row*4...row*4+4).each do |index| %>
          <% if abilities_array[index] %>
            <%= render partial: 'special_ability_no_value_box', locals: { ability: abilities_array[index] } %>
          <% else %>
            <%= render partial: 'special_ability_no_value_box', locals: { ability: '' } %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
