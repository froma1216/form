<div class="container">
  <h1>選手新規作成</h1>
  <form class="mb-3">
    <div class="row">
      <%# 名字 %>
      <div class="col-6">
        <label class="form-label">姓</label>
        <input type="search" class="form-control" placeholder="佐藤" autocomplete="name">
      </div>
      <%# 名前 %>
      <div class="col-6">
        <label class="form-label">名</label>
        <input type="search" class="form-control" placeholder="太郎" autocomplete="name">
      </div>
    </div>
    <%# 選手名 %>
    <div>
      <label class="form-label">選手名</label>
      <input type="search" class="form-control" placeholder="佐藤太" autocomplete="name">
    </div>
    <%# 背ネーム %>
    <div>
      <label class="form-label">背ネーム</label>
      <input type="search" class="form-control" placeholder="SATO" autocomplete="name">
    </div>
    <%# 生年月日 %>
    <div class="input-group date mb-3" id="datetimepicker1" data-target-input="nearest">
      <label for="datetimepicker1" class="pt-2 pr-2">生年月日</label>
      <%# TODO: date_fieldを使用 %>
      <input type="text" class="form-control datetimepicker-input" data-target="#datetimepicker1">
      <div class="input-group-text" data-target="#datetimepicker1" data-toggle="datetimepicker">
        <i class="fa fa-solid fa-calendar"></i>
      </div>
    </div>
    <%# メインポジション %>
    <div class="mb-3">
      <label class="form-label">メインポジション</label>
      <%# TODO: 投手と野手をラジオで選択できるように %>
      <select class="form-select" aria-label="Default select example">
        <option selected>Open this select menu</option>
        <%# ラジオで投手を選択 %>
        <option value="10">先発</option>
        <option value="11">中継ぎ</option>
        <option value="12">抑え</option>
        <%# ラジオで投手を選択 %>
        <option value="3">一塁手</option>
        <option value="4">二塁手</option>
        <option value="5">三塁手</option>
        <option value="6">遊撃手</option>
        <option value="7">外野手</option>
      </select>
    </div>
    <%# サブポジション %>
    <div class="mb-3">
      <label class="form-label">サブポジション</label>
      <%# FIXME: メインポジションで選択しているポジションは非活性 %>
      <%# 投手 %>
      <div class="row">
        <div class="col-4">
          <label class="form-label small">先発</label>
          <input type="number" class="form-control col-4" name="先発">
        </div>
        <div class="col-4">
          <label class="form-label small">中継ぎ</label>
          <input type="number" class="form-control col-4" name="中継ぎ">
        </div>
        <div class="col-4">
          <label class="form-label small">中継ぎ</label>
          <input type="number" class="form-control col-4" name="抑え">
        </div>
      </div>
      <%# 野手 %>
      <div class="row">
        <div class="col">
          <label class="form-label small">一塁手</label>
          <input type="number" class="form-control" name="一塁手">
        </div>
        <div class="col">
          <label class="form-label small">二塁手</label>
          <input type="number" class="form-control" name="二塁手">
        </div>
        <div class="col">
          <label class="form-label small">三塁手</label>
          <input type="number" class="form-control" name="三塁手">
        </div>
        <div class="col">
          <label class="form-label small">遊撃手</label>
          <input type="number" class="form-control" name="遊撃手">
        </div>
        <div class="col">
          <label class="form-label small">外野手</label>
          <input type="number" class="form-control" name="外野手">
        </div>
      </div>
    </div>
    <%# 検索ボタン %>
    <input type="submit" class="btn btn-primary" value="登録">
  </form>
</div>
